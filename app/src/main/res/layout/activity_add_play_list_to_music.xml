<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MusicManager.AddPlaylistToMusicActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="@drawable/background_color">

        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/searchPlaylistToMusic"
            app:iconifiedByDefault="true"
            app:searchHintIcon="@null"
            app:queryHint="Search..."
            android:focusable="false"
            android:background="@color/black"
            app:searchIcon="@drawable/baseline_manage_search_24"/>

        <ListView
            android:id="@+id/lvPlaylistsToMusic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/searchPlaylistToMusic"
            android:layout_marginTop="45sp"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>