@{
    ViewBag.Title = "Reset Password";
    Layout = null; // Skip layout to focus on this form alone
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <style>
        /* Background styling */
        body {
            background-image: url('/Images/background.jpg');
            background-size: cover;
            background-repeat: no-repeat;
            height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        /* Form styling */
        form {
            width: 400px;
            padding: 40px;
            border-radius: 10px;
            background-color: rgba(255, 255, 255, 0.13);
            backdrop-filter: blur(10px);
            box-shadow: 0 0 40px rgba(8, 7, 16, 0.6);
            border: 2px solid rgba(255, 255, 255, 0.1);
            text-align: center;
        }

        h2 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #fff;
        }

        .form-group {
            margin-top: 20px;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            background-color: rgba(255, 255, 255, 0.07);
            border: 2px solid black; /* Black border */
            border-radius: 3px;
            color: black;
        }

        .btn-primary {
            width: 100%;
            padding: 15px;
            margin-top: 23px;
            margin-left: 8px;
            border: 2px solid black; /* Black border */
            border-radius: 5px;
            background-color: rgba(255, 255, 255, 0.07);
            color: black;
            font-size: 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: white;
            }

        .text-danger, .text-success {
            margin-top: 15px;
            font-size: 14px;
        }
    </style>
</head>

<body>
    <form asp-action="ResetPassword" method="post">
        @Html.AntiForgeryToken()
        <h2 style="color:black" >Reset Password</h2>

        <div class="form-group" style="text-align: left">
            @Html.Label("Email", new { @style = "color: #black;" })
            @Html.TextBox("email", null, new { @class = "form-control" })
        </div>

        <div>
            <input type="submit" value="Send Reset Link" class="btn btn-primary" />
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="text-danger">@ViewBag.Error</div>
        }

        @if (ViewBag.Message != null)
        {
            <div class="text-success">@ViewBag.Message</div>
        }
    </form>
</body>
</html>
